\renewenvironment{thebibliography}[1]{%
  \bibsection
      \if@RTL%
        \if@LTRbibitems%
          \@RTLfalse%
          \pardir TLT%
          \textdir TLT%
        \fi%
      \else%
        \if@RTLbibitems%
          \@RTLtrue%
          \pardir TRT%
          \textdir TRT%
        \fi%
      \fi%
  \begin{bibitemlist}{#1}}{\end{bibitemlist}\postbibhook}

